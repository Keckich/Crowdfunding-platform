<script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>*@

<table class="table table-bordered table-striped ">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InUser.Users)
        {

            <tr>
                <td>
                    <a asp-action="Index" asp-controller="User" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <button id="btnClickUser-@item.Id" type="button" class="btn bg-danger" data-toggle="modal" data-target="#deleteUserModal-@item.Id">
                        <i class="fa fa-window-close-o" aria-hidden="true"></i>
                    </button>
                    <div id="deleteUserModal-@item.Id" class="modal fade" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4>Delete User</h4>
                                    <button type="button" class="close" data-dismiss="modal">
                                        &times;
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Do you really want to delete "@item.UserName" account? This action cannot be undone.</p>
                                </div>
                                <div class="modal-footer">
                                    <form method="post">
                                        <button asp-page-handler="delete" asp-route-id="@item.Id" id="btnDelete-@item.Id" class="btn bg-danger">
                                            Delete
                                        </button>
                                    </form>
                                    <button id="hideModalBtn1" type="button" class="btn bg-info" data-dismiss="modal">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
